{
  "dependencies": {
    "next": "11.0.1",
    "node-pg-migrate": "5.10.0",
    "pg": "8.6.0",
    "react": "17.0.2",
    "react-confetti": "6.0.1",
    "react-dom": "17.0.2",
    "react-icons": "4.2.0"
  },
  "devDependencies": {
    "@babel/preset-env": "7.14.7",
    "autoprefixer": "10.3.1",
    "concurrently": "6.2.0",
    "cz-conventional-changelog": "3.3.0",
    "dotenv": "10.0.0",
    "eslint": "7.31.0",
    "eslint-config-next": "11.0.1",
    "eslint-config-prettier": "8.3.0",
    "jest": "27.0.6",
    "postcss": "8.3.5",
    "prettier": "2.3.2",
    "tailwindcss": "2.2.4"
  },
  "scripts": {
    "dev": "npm run services:dev:up && npm run next && npm run services:dev:stop",
    "next": "next dev",
    "services:dev:up": "docker-compose -f infra/docker-compose.development.yml up -d",
    "services:dev:stop": "docker-compose -f infra/docker-compose.development.yml stop",
    "build": "next build",
    "start": "next start -p 8080",
    "test": "jest --runInBand --forceExit",
    "test:watch": "jest --runInBand --watch",
    "lint": "npm run lint:next && npm run lint:prettier",
    "lint:next": "next lint --dir .",
    "lint:prettier": "prettier --check '**/*.{js,jsx,ts,tsx}'",
    "commit": "cz"
  },
  "name": "tabnews.com.br",
  "description": "Conteúdos para quem vive de programação e tecnologia.",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/filipedeschamps/tabnews.com.br.git"
  },
  "keywords": [
    "news"
  ],
  "author": "Filipe Deschamps",
  "license": "GPL-3.0-only",
  "bugs": {
    "url": "https://github.com/filipedeschamps/tabnews.com.br/issues"
  },
  "homepage": "https://www.tabnews.com.br/",
  "jest": {
    "moduleDirectories": [
      "node_modules",
      "."
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/.next"
    ],
    "testTimeout": 120000,
    "slowTestThreshold": 40000,
    "setupFiles": [
      "dotenv/config"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
